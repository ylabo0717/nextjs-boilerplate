{
  "threshold": 100,
  "reporters": ["json", "silent"],
  "ignore": [
    "**/node_modules/**",
    "**/.next/**",
    "**/dist/**",
    "**/build/**",
    "**/coverage/**",
    "**/public/**",
    "**/*.min.js",
    "**/*.min.css",
    "**/package-lock.json",
    "**/pnpm-lock.yaml",
    "**/.git/**",
    "**/metrics/**",
    "**/*.json",
    "**/*.md"
  ],
  "format": ["javascript", "typescript", "jsx", "tsx"],
  "absolute": false,
  "gitignore": true,
  "minLines": 5,
  "minTokens": 50,
  "output": "./metrics",
  "silent": false,
  "maxSize": "500kb",
  "ignoreCase": false,
  "ignorePattern": [],
  "mode": "mild"
}
