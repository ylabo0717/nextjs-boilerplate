{
  "name": "nextjs-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "start:test": "NODE_ENV=test next start",
    "lint": "next lint",
    "lint:ci": "cross-env CI=true next lint --max-warnings=0",
    "lint:pre-push": "cross-env PRE_PUSH=true next lint --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "test": "pnpm test:unit && pnpm test:integration && playwright test",
    "test:unit": "vitest --run --config vitest.config.ts",
    "test:integration": "vitest --run --config vitest.integration.config.ts",
    "test:coverage": "vitest --run --coverage --config vitest.all.config.ts",
    "test:scripts": "vitest --run --dir tests/scripts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "docker:test": "docker compose -f docker-compose.test.yml build app-test app-integration app-server && docker compose -f docker-compose.test.yml run --rm app-test && docker compose -f docker-compose.test.yml run --rm app-integration && docker compose -f docker-compose.test.yml up app-server -d && docker compose -f docker-compose.test.yml run --rm playwright && docker compose -f docker-compose.test.yml down",
    "docker:test:unit": "docker compose -f docker-compose.test.yml build app-test && docker compose -f docker-compose.test.yml run --rm app-test",
    "docker:test:integration": "docker compose -f docker-compose.test.yml build app-integration && docker compose -f docker-compose.test.yml run --rm app-integration",
    "docker:test:e2e": "docker compose -f docker-compose.test.yml build app-server && docker compose -f docker-compose.test.yml up app-server -d && docker compose -f docker-compose.test.yml run --rm playwright && docker compose -f docker-compose.test.yml down",
    "docker:test:clean": "docker compose -f docker-compose.test.yml down -v",
    "metrics": "tsx scripts/measure-metrics.ts",
    "metrics:build": "tsx scripts/measure-metrics.ts --build",
    "metrics:test": "tsx scripts/measure-metrics.ts --test",
    "metrics:bundle": "tsx scripts/measure-metrics.ts --bundle",
    "quality:check": "tsx scripts/quality-gate.ts",
    "quality:check:verbose": "tsx scripts/quality-gate.ts --verbose",
    "metrics:report": "tsx scripts/report-metrics.ts",
    "quality:analyze": "tsx scripts/code-quality-analysis.ts",
    "quality:analyze:verbose": "tsx scripts/code-quality-analysis.ts --verbose",
    "quality:report": "tsx scripts/unified-quality-report.ts",
    "quality:report:verbose": "tsx scripts/unified-quality-report.ts --verbose",
    "quality:full": "pnpm quality:analyze && pnpm quality:report",
    "quality:full:verbose": "pnpm quality:analyze:verbose && pnpm quality:report:verbose",
    "precommit:check": "pnpm lint && pnpm format:check && pnpm typecheck",
    "precommit:fix": "pnpm lint --fix && pnpm format && pnpm typecheck",
    "lint:tw": "eslint --ext .ts,.tsx \"src/**/*.tsx\" --rule 'better-tailwindcss/enforce-consistent-class-order:error' --rule 'better-tailwindcss/enforce-consistent-line-wrapping:error'",
    "lint:tw:fix": "eslint --ext .ts,.tsx \"src/**/*.tsx\" --rule 'better-tailwindcss/enforce-consistent-class-order:error' --rule 'better-tailwindcss/enforce-consistent-line-wrapping:error' --fix",
    "lint:tw:preview": "eslint --ext .ts,.tsx \"src/**/*.tsx\" --rule 'better-tailwindcss/enforce-consistent-class-order:error' --rule 'better-tailwindcss/enforce-consistent-line-wrapping:error' --fix-dry-run",
    "lighthouse": "lhci autorun",
    "lighthouse:assert": "lhci assert",
    "lighthouse:collect": "lhci collect",
    "lighthouse:upload": "lhci upload",
    "docs": "typedoc --treatWarningsAsErrors",
    "docs:check": "node scripts/check-docs.mjs",
    "docs:check:raw": "typedoc --emit none --validation.notDocumented true --validation.notExported true --validation.invalidLink true",
    "docs:watch": "typedoc --watch",
    "changeset": "changeset",
    "changeset:add": "changeset add",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "release": "pnpm build && pnpm changeset:publish",
    "release:check": "changeset status --verbose"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/core": "^2.0.1",
    "@opentelemetry/exporter-logs-otlp-http": "^0.203.0",
    "@opentelemetry/exporter-prometheus": "^0.203.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.203.0",
    "@opentelemetry/instrumentation-pino": "^0.50.0",
    "@opentelemetry/resources": "^2.0.1",
    "@opentelemetry/sdk-metrics": "^2.0.1",
    "@opentelemetry/semantic-conventions": "^1.36.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "ioredis": "^5.7.0",
    "lucide-react": "^0.539.0",
    "next": "15.4.6",
    "next-themes": "^0.4.6",
    "pino": "^9.9.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@axe-core/playwright": "^4.10.2",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3",
    "@jscpd/badge-reporter": "^4.0.1",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.19.10",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-better-tailwindcss": "~3.7.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.4",
    "eslint-plugin-tsdoc": "^0.4.0",
    "eslint-plugin-unicorn": "^60.0.0",
    "eslint-plugin-vitest": "^0.5.4",
    "eslint-plugin-yml": "^1.18.0",
    "eslintcc": "^0.8.3",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "jscpd": "^4.0.5",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "msw": "^2.10.4",
    "pino-pretty": "^13.1.1",
    "playwright": "^1.54.2",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4",
    "testcontainers": "^11.5.1",
    "tsx": "^4.20.3",
    "tw-animate-css": "^1.3.6",
    "typedoc": "^0.28.10",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
