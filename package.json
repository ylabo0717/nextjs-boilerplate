{
  "name": "nextjs-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "start:test": "NODE_ENV=test next start",
    "lint": "next lint --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "test": "vitest --run && playwright test",
    "test:unit": "vitest --run --dir tests/unit",
    "test:integration": "vitest --run --dir tests/integration",
    "test:coverage": "vitest --run --coverage",
    "test:scripts": "vitest --run --dir tests/scripts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "metrics": "tsx scripts/measure-metrics.ts",
    "metrics:build": "tsx scripts/measure-metrics.ts --build",
    "metrics:test": "tsx scripts/measure-metrics.ts --test",
    "metrics:bundle": "tsx scripts/measure-metrics.ts --bundle",
    "quality:check": "tsx scripts/quality-gate.ts",
    "metrics:report": "tsx scripts/report-metrics.ts",
    "quality:analyze": "tsx scripts/code-quality-analysis.ts",
    "quality:report": "tsx scripts/unified-quality-report.ts",
    "quality:full": "pnpm quality:analyze && pnpm quality:report",
    "precommit:check": "pnpm lint && pnpm format:check && pnpm typecheck",
    "precommit:fix": "pnpm lint --fix && pnpm format && pnpm typecheck",
    "lint:tw": "eslint --ext .ts,.tsx \"src/**/*.tsx\" --rule 'better-tailwindcss/enforce-consistent-class-order:error' --rule 'better-tailwindcss/enforce-consistent-line-wrapping:error'",
    "lint:tw:fix": "eslint --ext .ts,.tsx \"src/**/*.tsx\" --rule 'better-tailwindcss/enforce-consistent-class-order:error' --rule 'better-tailwindcss/enforce-consistent-line-wrapping:error' --fix",
    "lint:tw:preview": "eslint --ext .ts,.tsx \"src/**/*.tsx\" --rule 'better-tailwindcss/enforce-consistent-class-order:error' --rule 'better-tailwindcss/enforce-consistent-line-wrapping:error' --fix-dry-run"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.539.0",
    "next": "15.4.6",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@axe-core/playwright": "^4.10.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3",
    "@jscpd/badge-reporter": "^4.0.1",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.19.10",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-better-tailwindcss": "~3.7.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^52.0.4",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.4",
    "eslint-plugin-unicorn": "^60.0.0",
    "eslint-plugin-vitest": "^0.5.4",
    "eslintcc": "^0.8.3",
    "husky": "^9.1.7",
    "jscpd": "^4.0.5",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "msw": "^2.10.4",
    "playwright": "^1.54.2",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4",
    "tsx": "^4.20.3",
    "tw-animate-css": "^1.3.6",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
